<Window x:Class="DirectoryPermissionTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        DataContext="{StaticResource MainViewModel}"
        Title="Directory Permissions Tool"
        Height="354"
        Width="525"
        ResizeMode="NoResize">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Help">
                <MenuItem Header="About"
                          Command="{Binding OpenAboutWindowCommand}" />
                <MenuItem Header="User Guide"
                          Command="{Binding OpenHelpWindowCommand}" />
            </MenuItem>
        </Menu>
        <Grid>
            <Grid Row="0">
                <StackPanel>
                    <Label Content="Search the following directories:" />
                    <ListBox ItemsSource="{Binding SearchPaths}"
                             BorderThickness="0"
                             Margin="5 0 5 0"
                             Height="48"
                             MaxHeight="48">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <DockPanel LastChildFill="True">
                                    <Button DockPanel.Dock="Right"
                                            Content="+"
                                            Command="{Binding DataContext.AddSearchPathCommand,
                                                RelativeSource={RelativeSource AncestorType=ListBox}}"
                                            CommandParameter="{Binding}"
                                            Visibility="{Binding AddButtonVisibility}" />
                                    <Button DockPanel.Dock="Right"
                                            Content="-"
                                            Command="{Binding DataContext.RemoveSearchPathCommand, 
                                                RelativeSource={RelativeSource AncestorType=ListBox}}"
                                            CommandParameter="{Binding}" />
                                    <Button DockPanel.Dock="Right"
                                            Content="Browse..."
                                            Command="{Binding BrowseFolderCommand}" />
                                    <TextBox DockPanel.Dock="Left"
                                             Text="{Binding Text,
                                                Mode=TwoWay,
                                                UpdateSourceTrigger=PropertyChanged}"

                                             HorizontalAlignment="Stretch"
                                             HorizontalContentAlignment="Stretch" />
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Label Content="Exclude the following directories:" />
                    <ListBox ItemsSource="{Binding ExcludedPaths}"
                             BorderThickness="0"
                             Margin="5 0 5 0"
                             MaxHeight="48"
                             Height="48">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <DockPanel LastChildFill="True">
                                    <Button DockPanel.Dock="Right"
                                            Content="+"
                                            Command="{Binding DataContext.AddExcludedPathCommand,
                                                RelativeSource={RelativeSource AncestorType=ListBox}}"
                                            CommandParameter="{Binding}"
                                            Visibility="{Binding AddButtonVisibility}" />
                                    <Button DockPanel.Dock="Right"
                                            Content="-"
                                            Command="{Binding DataContext.RemoveExcludedPathCommand, 
                                                RelativeSource={RelativeSource AncestorType=ListBox}}"
                                            CommandParameter="{Binding}" />
                                    <Button DockPanel.Dock="Right"
                                            Content="Browse..."
                                            Command="{Binding BrowseFolderCommand}" />
                                    <TextBox DockPanel.Dock="Left"
                                             Text="{Binding Text,
                                                Mode=TwoWay,
                                                UpdateSourceTrigger=PropertyChanged}"

                                             HorizontalAlignment="Stretch"
                                             HorizontalContentAlignment="Stretch" />
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Label Content="Get permissions for:" />
                    <RadioButton Content="Directories Only"
                                 IsChecked="{Binding SearchDepthCurrentIsChecked}"
                                 GroupName="SearchDepth"
                                 Margin="5 0 5 0" />
                    <RadioButton Content="Directories and Children (1 Level)"
                                 IsChecked="{Binding SearchDepthChildrenIsChecked}"
                                 GroupName="SearchDepth"
                                 Margin="5 5 5 0" />
                    <RadioButton Content="Directories and All Children"
                                 IsChecked="{Binding SearchDepthAllIsChecked}"
                                 GroupName="SearchDepth"
                                 Margin="5 5 5 0" />
                    <CheckBox Content="Include Files"
                              Margin="5 5 5 5"
                              IsChecked="{Binding IncludeFilesIsChecked}" />
                    <Separator />
                    <Button Content="Get Directory Permissions"
                            Command="{Binding GetDirectoryPermissionsCommand}"
                            Margin="5 5 5 5" />
                </StackPanel>
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="{Binding ProgressBarVisibility}">
                    <ProgressBar HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Height="10"
                                 Width="100"
                                 IsIndeterminate="true"
                                 Visibility="{Binding ProgressBarVisibility}" />
                    <Button Content="Cancel"
                            Command="{Binding CancelCommand}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="{Binding CancelButtonVisibility}"
                            Margin="5 5 5 5" />
                </StackPanel>
                <Border BorderBrush="Black"
                        BorderThickness="1"
                        Visibility="{Binding MessageVisibility, Mode=TwoWay}"
                        Panel.ZIndex="{Binding MessageZIndex, Mode=TwoWay}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="White"
                        Width="475"
                        Height="200">
                    <TextBlock Text="{Binding Path=Message, Mode=TwoWay}"
                               TextWrapping="Wrap"
                               Visibility="{Binding MessageVisibility, Mode=TwoWay}"
                               Panel.ZIndex="{Binding MessageZIndex, Mode=TwoWay}"
                               MouseLeftButtonDown="Label_MouseDoubleClick" />
                </Border>
            </Grid>
        </Grid>
    </DockPanel>
</Window>